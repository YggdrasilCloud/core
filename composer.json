{
    "name": "yggdrasilcloud/core",
    "description": "YggdrasilCloud Core API - Photo management backend with hexagonal architecture",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.17",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.5",
        "nelmio/cors-bundle": "^2.5",
        "runtime/frankenphp-symfony": "^0.2.0",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/flex": "^2.8.2",
        "symfony/framework-bundle": "7.3.*",
        "symfony/messenger": "7.3.*",
        "symfony/mime": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/serializer": "7.3.*",
        "symfony/uid": "7.3.*",
        "symfony/validator": "7.3.*",
        "symfony/yaml": "7.3.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint": "parallel-lint --colors src tests",
        "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs:check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff",
        "stan": "phpstan analyse -c phpstan.neon --memory-limit=1G",
        "deptrac": "deptrac --config-file=deptrac.yaml",
        "test": "phpunit --no-coverage",
        "test:unit": "phpunit --no-coverage --testsuite=Unit",
        "test:functional": "phpunit --no-coverage --testsuite=Functional",
        "infection": "infection --threads=4 --min-msi=100 --min-covered-msi=100",
        "qual": [
            "@cs:check",
            "@stan"
        ],
        "ci": [
            "@lint",
            "@cs:check",
            "@stan",
            "@deptrac",
            "@test"
        ],
        "all": [
            "@lint",
            "@cs:check",
            "@stan",
            "@deptrac",
            "@test",
            "@infection"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "infection/infection": "^0.31.2",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpro/grumphp": "*",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.3",
        "qossmic/deptrac": "^2.0",
        "symfony/browser-kit": "7.3.*",
        "symfony/css-selector": "7.3.*",
        "vimeo/psalm": "^6.13"
    }
}
